<div>
  <div>
    <h1>
      Plantphoto #<%= @the_plantphoto.id %> details
    </h1>

    <div>
      <div>
        <a href="/plantphotos">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_plantphoto/<%= @the_plantphoto.id %>">
          Delete plantphoto
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Image
      </dt>
      <dd>
        <%= @the_plantphoto.image %>
      </dd>

      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_plantphoto.caption %>
      </dd>

      <dt>
        Plant
      </dt>
      <dd>
        <%= @the_plantphoto.plant_id %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_plantphoto.owner_id %>
      </dd>

      <dt>
        Cover
      </dt>
      <dd>
        <%= @the_plantphoto.cover %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_plantphoto.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_plantphoto.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit plantphoto
    </h2>

    <form action="/modify_plantphoto/<%= @the_plantphoto.id %>"  method="post" >
      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_plantphoto.image %>">
      </div>

      <div>
        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="query_caption" value="<%= @the_plantphoto.caption %>">
      </div>

      <div>
        <label for="plant_id_box">
          Plant
        </label>

        <input type="text" id="plant_id_box" name="query_plant_id" value="<%= @the_plantphoto.plant_id %>">
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" value="<%= @the_plantphoto.owner_id %>">
      </div>

      <div>
        <input type="checkbox" id="cover_box" name="query_cover" value="1" <%= "checked" if @the_plantphoto.cover %>>

        <label for="cover_box">
            Cover
        </label>
      </div>

      <button>
        Update plantphoto
      </button>
    </form>
  </div>
</div>

<hr>
