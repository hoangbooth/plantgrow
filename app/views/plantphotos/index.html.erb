<div>
  <div>
    <h1>
      List of all plantphotos
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new plantphoto
    </h2>

    <form action="/insert_plantphoto" method="post">
      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="query_caption">
      </div>

      <div>
        <label for="plant_id_box">
          Plant
        </label>

        <input type="text" id="plant_id_box" name="query_plant_id">
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id">
      </div>

      <div>
        <input type="checkbox" id="cover_box" name="query_cover" value="1">

        <label for="cover_box">Cover</label>
      </div>

      <button>
        Create plantphoto
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Plant
        </th>

        <th>
          Owner
        </th>

        <th>
          Cover
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_plantphotos.each do |a_plantphoto| %>
      <tr>
        <td>
          <%= a_plantphoto.id %>
        </td>

        <td>
          <%= a_plantphoto.image %>
        </td>

        <td>
          <%= a_plantphoto.caption %>
        </td>

        <td>
          <%= a_plantphoto.plant_id %>
        </td>

        <td>
          <%= a_plantphoto.owner_id %>
        </td>

        <td>
          <%= a_plantphoto.cover %>
        </td>

        <td>
          <%= time_ago_in_words(a_plantphoto.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_plantphoto.updated_at) %> ago
        </td>

        <td>
          <a href="/plantphotos/<%= a_plantphoto.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
