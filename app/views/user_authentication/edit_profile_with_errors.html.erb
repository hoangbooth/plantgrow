<div >
  <h5>
    Edit User Account
  </h5>

  <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/modify_user" method="post">
              
      <div>
        <label for="email_box">Email</label>
          
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
          
      </div>
                                    
      <div>
        <label for="username_box">Username</label>
          
        <input id="username_box" name="query_username" value="<%= @current_user.username %>">
          
      </div>
                      
      <div>
        <label for="bio_box">Bio</label>
          
        <input id="bio_box" name="query_bio" value="<%= @current_user.bio %>">
          
      </div>
                      
      <div>
        <label for="city_box">City</label>
          
        <input id="city_box" name="query_city" value="<%= @current_user.city %>">
          
      </div>
                      
      <div>
        <label for="name_box">Name</label>
          
        <input id="name_box" name="query_name" value="<%= @current_user.name %>">
          
      </div>
                      
      <div>
        <label for="profilepic_box">Profilepic</label>
          
        <input id="profilepic_box" name="query_profilepic" value="<%= @current_user.profilepic %>">
          
      </div>
                      
      <div>
        <label for="private_box">Private</label>
          
        <input id="private_box" name="query_private" type="checkbox" value="1" <%= "checked" if @current_user.private %>>
          
      </div>
                      
      <div>
        <label for="sent_follow_requests_count_box">Sent follow requests count</label>
          
        <input id="sent_follow_requests_count_box" name="query_sent_follow_requests_count" value="<%= @current_user.sent_follow_requests_count %>">
          
      </div>
                      
      <div>
        <label for="received_follow_requests_count_box">Received follow requests count</label>
          
        <input id="received_follow_requests_count_box" name="query_received_follow_requests_count" value="<%= @current_user.received_follow_requests_count %>">
          
      </div>
                      
      <div>
        <label for="own_plants_count_box">Own plants count</label>
          
        <input id="own_plants_count_box" name="query_own_plants_count" value="<%= @current_user.own_plants_count %>">
          
      </div>
                      
      <div>
        <label for="plantphotos_count_box">Plantphotos count</label>
          
        <input id="plantphotos_count_box" name="query_plantphotos_count" value="<%= @current_user.plantphotos_count %>">
          
      </div>
                      
      <div>
        <label for="activities_count_box">Activities count</label>
          
        <input id="activities_count_box" name="query_activities_count" value="<%= @current_user.activities_count %>">
          
      </div>
              
      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a new password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your new password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
