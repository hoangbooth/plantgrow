<div >
  <h5>
    Edit User Account
  </h5>

  <div>
    <form action="/modify_user" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
      <div>
        <label for="username_box">Username</label>
        <input id="username_box" name="query_username" value="<%= @current_user.username %>">
      </div>
      <div>
        <label for="bio_box">Bio</label>
        <input id="bio_box" name="query_bio" value="<%= @current_user.bio %>">
      </div>
      <div>
        <label for="city_box">City</label>
        <input id="city_box" name="query_city" value="<%= @current_user.city %>">
      </div>
      <div>
        <label for="name_box">Name</label>
        <input id="name_box" name="query_name" value="<%= @current_user.name %>">
      </div>
      <div>
        <label for="private_box">Private</label>
        <input id="private_box" name="query_private" type="checkbox" value="1" <%= "checked" if @current_user.private %>>
      </div>
      

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>

  </div>
</div>

<br>
<hr>

<div >
  <h5>
    Edit Profile Pics
  </h5>
  <div>
  
     <% if @current_user.profilepic.blank? %>  
      <img src="https://res-2.cloudinary.com/ddzomkra2/image/upload/v1678090744/ktjyf7subhvr3razsbud.png" style="width:50px;height:50px;"></img>   
  <% else %>
   <img src="<%= @current_user.profilepic %>" style="width:50px;height:50px;"></img>
  <% end %>
  </div>
  <div>
    <form action="/insert_profile_pic" method="post" class="form-horizontal" enctype="multipart/form-data">

      <div>
        <label for="avatar">
          Image
        </label>

        <%# <input type="text" id="image_box" name="query_image"> %>
      <input type="file" id="avatar" name="profilepic" class="form-control">

      </div>


      <button>
        Update your pics
      </button>
    </form>


  </div>



</div>
