<div>
  <div>
    <h1>
      Room #<%= @the_room.id %> details
    </h1>

    <div>
      <div>
        <a href="/rooms">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_room/<%= @the_room.id %>">
          Delete room
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Roomtype
      </dt>
      <dd>
        <%= @the_room.roomtype %>
      </dd>

      <dt>
        Roomname
      </dt>
      <dd>
        <%= @the_room.roomname %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_room.owner_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_room.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_room.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit room
    </h2>

    <form action="/modify_room/<%= @the_room.id %>"  method="post" >
      <div>
        <label for="roomtype_box">
          Roomtype
        </label>

        <input type="text" id="roomtype_box" name="query_roomtype" value="<%= @the_room.roomtype %>">
      </div>

      <div>
        <label for="roomname_box">
          Roomname
        </label>

        <input type="text" id="roomname_box" name="query_roomname" value="<%= @the_room.roomname %>">
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" value="<%= @the_room.owner_id %>">
      </div>

      <button>
        Update room
      </button>
    </form>
  </div>
</div>

<hr>
